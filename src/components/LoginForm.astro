---
interface Props {
  action: string;
}

const { action } = Astro.props;
---

<form action={action} method="POST" class="login-form">
  <h2 class="login-title">Inicie sesión en su cuenta</h2>
  <div class="input-group">
    <label for="email">Correo electrónico</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="Ingresa tu correo electrónico"
      required
    />
  </div>
  <div class="input-group">
    <label for="password">Contraseña</label>
    <input
      type="password"
      id="password"
      name="password"
      placeholder="Enter your password"
      required
    />
  </div>
  <button type="submit" class="login-button">Iniciar sesión</button>
  <p>
    Hecho con ❤️ por <a
      href="https://agenciaideaspro.cl/"
      target="_blank"
      rel="noopener noreferrer">Agencia Ideas Pro</a
    >
  </p>
</form>

<style>
  .login-form {
    max-width: 400px;
    margin: auto;
    padding: 2rem;
    background-color: #23262d;
    border-radius: 8px;
    border: 1px solid transparent;
    transition: all 0.4s ease;
    position: relative;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .login-form:hover {
    background: linear-gradient(
      135deg,
      rgba(var(--accent), 0.1),
      rgba(var(--accent-light), 0.1)
    );
    border: 1px solid rgb(var(--accent-light));
    box-shadow: 0 4px 15px rgba(var(--accent-light), 0.2);
  }

  .login-title {
    font-size: 1.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 1rem;
    color: rgb(var(--accent-light));
    transition: color 0.4s ease;
  }

  .input-group {
    margin-bottom: 1rem;
  }

  .input-group label {
    display: block;
    font-weight: 600;
    color: rgb(var(--accent-light));
    margin-bottom: 0.5rem;
  }

  .input-group input {
    width: 100%;
    padding: 0.8rem;
    border-radius: 6px;
    border: 1px solid rgba(var(--accent-light), 0.2);
    background-color: #1e1f24;
    color: white;
    font-size: 1rem;
    transition: all 0.4s ease;
  }

  .input-group input:focus {
    border-color: rgb(var(--accent));
    outline: none;
    box-shadow: 0 0 0 2px rgba(var(--accent), 0.4);
  }

  .login-button {
    width: 100%;
    padding: 1rem;
    border-radius: 6px;
    border: none;
    font-size: 1rem;
    font-weight: 600;
    background-color: rgb(var(--accent));
    color: white;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .login-button:hover {
    background-color: rgb(var(--accent-dark));
  }

  .signup-link {
    margin-top: 1rem;
    text-align: center;
    color: rgb(var(--accent-light));
  }

  .signup-link a {
    color: rgb(var(--accent));
    text-decoration: none;
  }

  .signup-link a:hover {
    text-decoration: underline;
  }
</style>
